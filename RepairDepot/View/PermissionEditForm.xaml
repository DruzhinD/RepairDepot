<UserControl x:Class="RepairDepot.View.PermissionEditForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RepairDepot.View"
             xmlns:viewmodel="clr-namespace:RepairDepot.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewmodel:PermissionEditVM />
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding Permissions}">
            <!--CanUserAddRows="False"-->
            
        </DataGrid>

        <Button Grid.Row="1"
                Command="{Binding SaveChanges}"
                Style="{StaticResource ButtonBaseStyle}"
                Margin="3"
                Content="Сохранить"/>
    </Grid>
</UserControl>
