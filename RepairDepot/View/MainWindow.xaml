<Window x:Class="RepairDepot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RepairDepot.View"
        xmlns:viewmodel="clr-namespace:RepairDepot.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Window.DataContext>
        <viewmodel:MainVM />
    </Window.DataContext>
    <Grid Background="#ff9800">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*" />
            <RowDefinition />
            <RowDefinition />

        </Grid.RowDefinitions>
        <local:AuthorizationForm DataContext="{Binding AuthorizationVM}"
                                 Grid.Row="0"
                                 Visibility="{Binding Visible}">

        </local:AuthorizationForm>
        <Button Grid.Row="1"
                Content="button"
                Command="{Binding MyButton}"
                Style="{StaticResource ButtonBaseStyle}"/>
        <Label Content="{Binding Label}"
               Grid.Row="2" />
    </Grid>
</Window>
